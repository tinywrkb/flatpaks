{
    "name": "sane",
    "config-opts": [
        "--sbindir=${FLATPAK_DEST}/bin",
        "--with-avahi",
        "--with-poppler-glib",
        "--without-gphoto2",
        "--without-snmp",
        "--without-usb",
        "--without-v4l",
        "BACKENDS=escl net"
    ],
    "post-install": [
        "sed -i 's/^# \\(localhost\\)/\\1/' ${FLATPAK_DEST}/etc/sane.d/net.conf",
        "echo -e 'escl\\nnet' > ${FLATPAK_DEST}/etc/sane.d/dll.conf"
    ],
    "sources": [
        "sources.json"
    ],
    "modules": [
        "../avahi/libavahi.json",
        "../poppler/poppler.json"
    ],
    "cleanup": [
        "/etc/sane.d/dll.d",
        "/etc/sane.d/saned.conf",
        "/share/doc",
        "/share/man",
        "/share/sane"
    ]
}
